            name="bonitaDS"
            uniqueName="jdbc/bonitaDSXA"
            auth="Container"
            factory="org.jboss.narayana.tomcat.jta.TransactionalDataSourceFactory"
            transactionManager="TransactionManager"
            type="javax.sql.XADataSource"
            initialSize="8"
            maxTotal="50"
            minIdle="8"
            maxIdle="16"
            defaultAutoCommit="false"
